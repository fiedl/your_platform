%h1= current_title
%div
  %p Verwaltungsaktivit√§ten pro Verbindung und Zeit:
  = line_chart activities_charts_per_corporation_and_time_path(params), width: params[:width], height: params[:height]

%h1 Darstellung anpassen
%div
  = form_tag("#", method: "get") do

    = label_tag :corporation, "Verbindung ('E', ..., 'none', 'all')"
    = text_field_tag :corporation, params[:corporation]

    = label_tag :from_days_ago, "Start: vor N Tagen"
    = text_field_tag :from_days_ago, params[:from_days_ago]

    = label_tag :to_days_ago, "Ende: vor N Tagen"
    = text_field_tag :to_days_ago, params[:to_days_ago]

    = label_tag :binning, "Binning ('day', 'week', 'hour', ...)"
    = text_field_tag :binning, params[:binning]

    = label_tag :sum, "Summe anzeigen"
    = check_box_tag :sum, 'true', params[:sum]

    %br
    = submit_tag "Aktualisieren"
