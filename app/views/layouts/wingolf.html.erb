<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" >
  <title><%=h "#{@title} - " if @title %>Wingolfsplattform</title>

  <%= stylesheet_link_tag    "wingolf_layout", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>


  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="http://cdn.sublimevideo.net/js/deleted-sublime-key"></script><!-- TODO: Replace! -->

  <%= csrf_meta_tags %>

  <%= yield :head %>
</head>
<body class="<%= controller.controller_name %>">

  <% if logged_in? %>
  <div id="backendBar">
    <div class="content">
      <ul class="backendBarItems">
        <li class="first backendBarItem">
	  <%= render "layouts/session_bar_avatar" %>
	  <%= link_to @current_user.name, main_app.user_path( @current_user ) %>
	</li>
        <li class="backendBarItem"><%= link_to t( :my_profile ), main_app.user_path( @current_user ) %> </li>
	<li class="backendBarItem dropdown">
	  <%= link_to t( :my_groups ), main_app.my_groups_path, class: 'dropdown-toggle', data: { toggle: 'dropdown' } %>
	  <ul class="dropdown-menu">
	    <%= my_groups_lis %>
	  </ul>
	</li>
        <li class="last backendBarItem">
	  <%= link_to t( :logout ), main_app.sessions_logout_path %>
	</li>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <% end %>
  
  <div id="headerBg">
    <div id="header">
      <div id="header_claim">
	<%= image_tag( 'claim.png' ) %>
      </div>
      <div id="header_logo">
	<%= image_tag( 'logo.png' ) %>
      </div>
      <div id="header_search">
	Suche
      </div>
      <div id="horizontal_nav">
	<%= backend_horizontal_nav %>
      </div>
    </div>
  </div>

  <div id="contentBgLayer1">
    <div id="contentBgLayer2">
      <div id="contentBgLayer3">
        <div id="content_wrapper">
          <div id="toolbar">
	    <span id="breadcrumb">
	      <%= breadcrumb_ul %>
	    </span>
	    <span id="site_tools">
	      <%= edit_button %>
	    </span>
	  </div>
	  <div id="content">
            <div class="content_twoCols content_twoCols-20-80">
              <div class="content_twoCols_left">
		<div class="vertical_menu">
		  <ul>
		    <%= vertical_menu %>
		  </ul>
		</div>
	      </div>
              <div class="content_twoCols_right">

		<% if flash[ :error ] %>
  		  <div class="flash error"><%=h flash[ :error ] %></div>
                <% end %>   
		<% if flash[ :notice ] %>
		  <div class="flash notice"><%=h flash[ :notice ] %></div>
		<% end %>

           	<%= replace_unicode_special_chars_by_html_escape_strings(
		      convert_to_content_box { yield }
		    ) 
		%>
              </div>
              &nbsp;
              <div class="clear"></div>
            </div>
          </div>
	</div>
      </div>
    </div>
  </div>

  <div id="footer">
    <div id="footer_bg"></div>
    <div id="footer_navi">
      <ul>
	    <li><a>Impressum</a></li>
      </ul>
      <div class="clear"></div>
    </div>
    <div id="footer_line"></div>
  </div>

  <%= yield :scripts %>

</body>
</html>
